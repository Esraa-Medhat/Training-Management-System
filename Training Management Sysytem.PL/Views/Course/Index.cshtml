
@model IEnumerable<CourseDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">All Courses</h1>
<a asp-controller="Course" asp-action="Create"  class="btn btn-primary mb-3">Create New Course</a>
<form asp-action="Search" method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input type="text" name="name" class="form-control" placeholder="Search by course name..." value="@Context.Request.Query["name"]" />
    </div>
    <div class="col-md-4">
        <input type="text" name="category" class="form-control" placeholder="Search by category..." value="@Context.Request.Query["category"]" />
    </div>
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>
@if(Model.Count()>0){
    <table class="table table-striped table-hover mt-4">
        <thead class="text-center ">
            <tr>
                <th>@Html.DisplayNameFor(C=>C.Id)</th>
                <th>@Html.DisplayNameFor(C => C.Name)</th>
                <th>@Html.DisplayNameFor(C => C.Category)</th>
                <th>@Html.DisplayNameFor(C => C.InstructorName)</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            
                @foreach(var course in Model){
                    <tr>
                    <td>@course.Id</td>
                    <td>@course.Name</td>
                    <td>@course.Category</td>
                    <td>@course.InstructorName</td>
                 
                      <td>
                        <a asp-controller="Course" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-success"><i class="fas fa-edit"></i>Update</a>
                    </td>
                    <td>
                        <a asp-controller="Course" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger"><i class="fas  fa-trash"></i>Delete</a>
                    </td>
                </tr>
                }
           
        </tbody>
    </table>
}
else{
    <div class="btn btn-info mt-3">
        <h3>Sorry There Is No Courses :(</h3>
    </div>
}

