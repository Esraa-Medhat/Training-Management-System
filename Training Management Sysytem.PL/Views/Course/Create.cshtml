@model CourseDto
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Course</h1>
<form action="Create" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id"/>
       
    </div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Category"></label>
        <input class="form-control" asp-for="Category" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="InstructorName"></label>
        <input class="form-control" asp-for="InstructorName" />
        <span asp-validation-for="InstructorName" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a asp-controller="Course" asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</form>
