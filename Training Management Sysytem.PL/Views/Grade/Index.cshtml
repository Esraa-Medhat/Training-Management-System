@model IEnumerable<GradeDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">All Grades</h1>
<a asp-controller="Grade" asp-action="Create" class="btn btn-primary mb-3">Add New Grade</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead class="text-center ">
            <tr>
                <th>@Html.DisplayNameFor(C => C.Id)</th>
                <th>@Html.DisplayNameFor(C => C.SessionId)</th>
             
                <th>@Html.DisplayNameFor(C => C.TraineeId)</th>
                <th>@Html.DisplayNameFor(C => C.TraineeName)</th>
                <th>@Html.DisplayNameFor(C => C.Value)</th>
              
            </tr>
        </thead>
        <tbody class="text-center">

            @foreach (var grade in Model)
            {
                <tr>
                    <td>@grade.Id</td>
                    <td>@grade.SessionId</td>
                  
                    <td>@grade.TraineeId</td>
                    <td>@grade.TraineeName</td>
                    <td>@grade.Value</td>

                 
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="btn btn-info mt-3">
        <h3>Sorry There Is No Courses :(</h3>
    </div>
}