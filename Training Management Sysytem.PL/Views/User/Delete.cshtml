@model UserDto
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure To Delete @Model.Name User ?</h1>



<div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">

        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Id"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Name"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Role"></label>
                <input asp-for="Role" class="form-control" readonly />
            </div>

        </div>
    </div>

    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">

        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancle</a>

    </form>
</div>

