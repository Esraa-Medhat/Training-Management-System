@model IEnumerable<UserDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">All Users</h1>
<a asp-controller="User" asp-action="Create" class="btn btn-primary mb-3">Create New User</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead class="text-center ">
            <tr>
                <th>@Html.DisplayNameFor(U => U.Id)</th>
                <th>@Html.DisplayNameFor(U => U.Name)</th>
                <th>@Html.DisplayNameFor(U => U.Email)</th>
                <th>@Html.DisplayNameFor(U => U.Role)</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">

            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Name</td>
                    <td>@course.Email</td>
                    <td>@course.Role</td>

                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@course.Id" class="btn btn-success"><i class="fas fa-edit"></i>Update</a>
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger"><i class="fas  fa-trash"></i>Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="btn btn-primary mt-3">
        <h3>Sorry There Is No Courses :(</h3>
    </div>
}