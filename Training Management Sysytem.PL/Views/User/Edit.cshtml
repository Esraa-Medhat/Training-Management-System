@model UserEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User</h1>

<form action="Edit" method="post" class="col-6">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Id"></label>
        <input class="form-control" asp-for="Id" type="hidden" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3 form-group">
        <label class="form-label" asp-for="Role"></label>
        <input class="form-control" asp-for="Role" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div>
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-controller="User" asp-action="Index" class="btn btn-light">Cancle</a>
    </div>
</form>
