<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Training Management System</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fc;
        }

        .navbar {
            background: linear-gradient(90deg, #0d6efd, #6610f2);
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
            font-size: 1.3rem;
        }

        .navbar .nav-link {
            color: #f8f9fa !important;
            margin-right: 15px;
            transition: color 0.3s;
        }

        .navbar .nav-link:hover {
            color: #ffd700 !important;
        }

        footer {
            background: #0d6efd;
            color: white;
            padding: 15px 0;
        }

        footer a {
            color: #ffd700;
            text-decoration: none;
        }

        footer a:hover {
            text-decoration: underline;
        }

        main {
            background: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Header/Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-graduation-cap"></i> Training System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Course" asp-action="Index"><i class="fa fa-book"></i> Courses</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index"><i class="fa fa-users"></i> Users</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Session" asp-action="Index"><i class="fa fa-calendar-alt"></i> Sessions</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Grade" asp-action="Index"><i class="fa fa-star"></i> Grades</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="fa fa-shield-alt"></i> Privacy</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Body -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

