@model IEnumerable<SessionDto>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">All Sessions</h1>
<a asp-controller="Session" asp-action="Create" class="btn btn-primary mb-3">Create New Session</a>
<form asp-action="Search" method="get" class="row g-3 mb-3">
    <div class="col-md-4">
        <input type="text" name="name" class="form-control" placeholder="Search by session name..." value="@Context.Request.Query["name"]" />
    </div>
  
    <div class="col-md-4">
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-4">
        <thead class="text-center ">
            <tr>
                <th>@Html.DisplayNameFor(S=>S.Id)</th>
                <th>@Html.DisplayNameFor(S=>S.CourseId)</th>
                <th>@Html.DisplayNameFor(S => S.CourseName)</th>
                <th>@Html.DisplayNameFor(S => S.StartDate)</th>
                <th>@Html.DisplayNameFor(S => S.EndDate)</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">

            @foreach (var session in Model)
            {
                <tr>
                    <td>@session.Id</td>
                    <td>@session.CourseId</td>
                    <td>@session.CourseName</td>
                    <td>@session.StartDate</td>
                    <td>@session.EndDate</td>

                    <td>
                        <a asp-controller="Session" asp-action="Edit" asp-route-id="@session.Id" class="btn btn-success"><i class="fas fa-edit"></i>Update</a>
                    </td>
                    <td>
                        <a asp-controller="Session" asp-action="Delete" asp-route-id="@session.Id" class="btn btn-danger"><i class="fas  fa-trash"></i>Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="btn btn-info mt-3">
        <h3>Sorry There Is No Courses :(</h3>
    </div>
}

